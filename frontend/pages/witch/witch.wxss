.container {
    justify-content: flex-start;
    padding-top: 0;
    padding-bottom: 0;
    flex-grow: 1;
}
.titlebar {
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: lightgray;
}
.titlebar-name {
    padding-left: 24rpx;
    padding-right: 24rpx;
    color: white;
}
.titlebar-image {
    width: 80rpx;
    height: 80rpx;
}
.titlebar-left {
    transform:  rotateY(180deg);
}
.ground {
  width: 100%;
  height: 1rpx;
  flex-grow: 1;
  box-sizing: border-box;
  padding: 0rpx 0rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  align-content: flex-start;
}
.player-stub {
  width: 156rpx;
  height: 160rpx;
  margin: 4rpx;
}
.player {
  width: 156rpx;
  height: 160rpx;
  margin: 4rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
}
.player-avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
}
.player-name {
  width: 156rpx;
  font-size: 0.8em;
  white-space: nowrap;
  text-align: center;
  padding-top: 2rpx;
}
.poison-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 400rpx;
  height: 200rpx;
  border-top-left-radius: 200rpx;
  border-top-right-radius: 200rpx;
  border-top: 2px solid lightgray;
  border-left: 2px solid lightgray;
  border-right: 2px solid lightgray;
}
.touching-poison-area {
  background-color: lightblue;
}
.poison-image {
  width: 96rpx;
  height: 142rpx;
}
.current-marking-avatar {
  width: 96rpx;
  height: 96rpx;
}
.poison-flag {
  width: 38rpx;
  height: 57rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.medicine-flag {
  width: 38rpx;
  height: 57rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.heal {
  width: 45rpx;
  height: 64rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.poison-avatar {
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  top: 46rpx;
  left: 44rpx;
}
.poisoned-player-avatar {
  opacity: 0;
}
.clawmark {
  width: 100%;
  height: 100%;
  position: absolute;
}